{
  "name": "autoclicker-app-start",
  "version": "1.0.0",
  "description": "An autoclicker app, made in electron!",
  "author": "mylo",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "APP_DEV=true electron .",
    "pack": "eletron-builder --dir",
    "dist": "electron-builder --win=portable",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "Electron"
  ],
  "build": {
    "appId": "com.mylo.autoclicker",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": ["portable"],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "autoclicker_portable.exe"
  }
    
  },
  "devDependencies": {
    "electron": "^18.0.3",
    "electron-builder": "^23.0.3",
    "electron-reload": "^2.0.0-alpha.1"

  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.11"

  }
}
